<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/game_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_gamepad_black_24dp" />

        <TextView
            android:id="@+id/textView_gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_toStartOf="@+id/Button_delete"
            android:layout_toLeftOf="@+id/Button_delete"
            android:layout_toEndOf="@+id/game_icon"
            android:layout_toRightOf="@+id/game_icon"
            android:gravity="center"
            android:text="26 - June 19"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textView_gameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_gameTitle"
            android:layout_toRightOf="@+id/game_icon"
            android:gravity="center"
            android:text="Rounds: 13 | Target: 500 | Players: 10"
            android:paddingLeft="15dp"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/Button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:text="Del" />

    </RelativeLayout>


</android.support.v7.widget.CardView>